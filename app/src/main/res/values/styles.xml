<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitleButton14</item>
        <item name="cornerRadius">9dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="StyleTitleButton14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_category_color</item>
    </style>

    <style name="StyleText12" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/description_category_color</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_category_color</item>
    </style>

    <style name="StyleRecipeSectionTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_section_recipe_color</item>
    </style>
    
    <style name="StyleRecipeText14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="color">@color/black</item>
    </style>

    <style name="StylePortionText16" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="color">@color/portion_title_color</item>
    </style>

    <style name="StyleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">9dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle16" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_category</item>
    </style>

    <style name="StyleText12" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textAllCaps">true</item>
        android:textColor="#5F3678"
        <item name="android:textColor">@color/title_category</item>
    </style>
</resources>